@model IEnumerable<Entities.Dtos.GameDtos.GameListDto>

@{
    ViewData["Title"] = "Index";
}

<h1>All Games</h1>

<p>
    <a asp-action="Create">Create New Game</a>
</p>
<main class="games">
    @foreach (var item in Model)
    {
        <div class="game">
            <img src="/CoverImage/default-game-photo.jpg" alt="avatar"></img>
            <h4>
                @Html.DisplayFor(modelItem => item.GameName)
            </h4>

            <h5>
                @Html.DisplayFor(modelItem => item.Price)
            </h5>
           @* <a href="@Html.DisplayFor(modelItem => item.DownloadLink)">Download</a>*@
            <p>
                @Html.DisplayFor(modelItem => item.SystemRequirements)
            </p>
            @Html.ActionLink("Purchase", "Purchase", new { id=item.GameId})

            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.GameId}) |
                @Html.ActionLink("Details", "Details", new { id=item.GameId}) |
                @Html.ActionLink("Delete", "Delete", new { id=item.GameId})
            </td>
        </div>
    }
</main>